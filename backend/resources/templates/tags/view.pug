extends ../admin.pug

block content
  .space-between
    h1 Edit User - {{.Tag.Title}}
    .flex-row
      a(href="/admin/tags" class="btn btn-secondary btn-sm m-1") Back
      form(action='/api/tags/delete', method='POST' class="mb-0")
        input(hidden="true" value="{{.Project.ID}}" name="id")
        button(type="submit" class="btn btn-danger btn-sm m-1") Delete
  form(action='/api/projects/edit', method='POST')
    input(type="hidden" name="redirect" value="/admin/tags")
    input(type="hidden" value="{{.Project.ID}}" name="id")
    input(type="hidden" value="{{.Project.DateCreated}}" name="dateCreated")
    .form-group.mb-3
      label(for="title") Title
      input(type="text" class="form-control" name="title" placeholder="Title" value="{{.Tag.Title}}" required=true)