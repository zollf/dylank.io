extends ../admin.pug

block content
  .space-between
    h1 Create User
    .flex-row 
      a(href="/admin/users" class="btn btn-secondary btn-sm m-1") Back
  form(action='/api/users/create', method='POST')
    input(type="hidden" name="redirect" value="/admin/users")
    .form-group.mb-3
      label(for="username") Username
      input(type="text" class="form-control" name="username" placeholder="Username" required=true)
    .form-group.mb-3
      label(for="password") Password
      input(type="password" class="form-control" name="password" placeholder="Password" required=true)
    .form-group.mb-3
      label(for="email") Email
      input(type="email" class="form-control" name="email" placeholder="Email" required=true)
    button(type="submit" class="btn btn-primary") Create
